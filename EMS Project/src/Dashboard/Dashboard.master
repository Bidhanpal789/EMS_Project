    <script>
        $(document).ready(function () {
            // Hide preloader
            setTimeout(function () {
                $('.preloader').addClass('hidden');
            }, 1000);

            // Initialize sidebar state
            function initSidebar() {
                if ($(window).width() >= 768) {
                    $('#sidebar').removeClass('show');
                    //$('.sidebar-backdrop').hide();
                } else {
                    $('#sidebar').addClass('show');
                    $('ba')
                }
            }

            // Call on load and on resize
            initSidebar();
            $(window).resize(initSidebar);

            // Sidebar toggle functionality
            $('#sidebarToggle').click(function (e) {
                e.preventDefault();
                e.stopPropagation();
                $('#sidebar').toggleClass('show');
                $('.sidebar-backdrop').toggle();
            });

            // Close sidebar when clicking close button or backdrop
            $('.sidebar-close, .sidebar-backdrop').click(function (e) {
                e.preventDefault();
                $('#sidebar').removeClass('show');
                $('.sidebar-backdrop').hide();

            });

            // Close sidebar when clicking on menu items (mobile only)
            $('.menu-item').click(function () {
                if ($(window).width() <= 768) {
                    $('#sidebar').removeClass('show');


                }
            });
        });
    </script>
