    <style>
        /* Preloader Styles */
        .preloader {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: white;
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            transition: opacity 0.5s ease;
        }

            .preloader.hidden {
                opacity: 0;
                pointer-events: none;
            }

        .loader {
            border: 5px solid #f3f3f3;
            border-top: 5px solid #3498db;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            animation: spin 1s linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }

        /* Mobile Sidebar Styles */
        @media (max-width: 768px) {
            .sidebar {
                position: fixed;
                left: -250px;
                top: 0;
                bottom: 0;
                width: 250px;
                z-index: 1050;
                transition: left 0.3s ease;
                background: #ffffff;
                color: white;
                overflow-y: auto;
            }

                .sidebar.show {
                    left: 0;
                }

            .sidebar-backdrop {
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background-color: rgba(0,0,0,0.5);
                z-index: 1040;
                display: none;
            }

            .main-content {
                margin-left: 0;
            }

            .fixed-bottom {
                position: relative !important;
                width: 100% !important;
                bottom: 0 !important;
            }
        }

        /* Desktop Styles */
        @media (min-width: 769px) {
            .sidebar {
                position: fixed;
                left: 0;
                top: 0;
                bottom: 0;
                width: 250px;
                z-index: 1000;
                background: #ffffff;
                color: white;
                overflow-y: auto;
            }

            .main-content {
                margin-left: 250px;
            }

            .sidebar-backdrop {
                display: none !important;
                width: 75vw;
            }
        }
    </style>
</head>
